@model IEnumerable<string>?
@{
    ViewData["Title"] = "Difficulty Select";
}

<h1>DifficultySelect</h1>
@if (@Model is not null)
{
    <form style="display:flex;justify-content:center;align-items:center" asp-controller="Game" asp-action="Game">
        <select style="font-family:sans-serif;font-size:25px;width:130px;height:40px;;margin-right:15px;" name="difficulty">
    @foreach (var item in @Model)
    {
        <option value="@item">@item</option>
    }  
    </select>
        <button style="background-color:#ADD8E6;font-family:sans-serif;font-size:25px;width:100px;height:40px;" type="submit">Graj</button>
    </form>
}
